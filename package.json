{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for auto painting studio",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc && npm run copy-files",
    "copy-files": "mkdir -p dist/data dist/pdf/fonts && cp src/data/services.json dist/data/ && cp src/pdf/fonts/DejaVuSans.ttf dist/pdf/fonts/",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@telegraf/session": "^2.0.0-beta.7",
    "dotenv": "^16.4.1",
    "ioredis": "^5.6.1",
    "pdfkit": "^0.14.0",
    "telegraf": "^4.15.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/pdfkit": "^0.13.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
 